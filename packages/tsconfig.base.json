{
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noEmitOnError": true,
        "inlineSourceMap": true,
        "strict": true,
        "stripInternal": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ESNext",
        "lib": ["dom", "ESNext"],
        "paths": {
            "express": ["../../node_modules/express"],
            "http": ["../../node_modules/@types/node/http"],
            "socket.io": ["../../node_modules/socket.io"],
            "vue": ["node_modules/vue"],
            "vue-i18n": ["node_modules/vue-i18n"]
        }
    }
}
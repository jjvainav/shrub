{
    "private": true,
    "workspaces": [
        "app/*",
        "web"
    ],
    "scripts": {
        "bootstrap": "yarn install",
        "build": "./node_modules/.bin/lerna run build --stream",
        "build-app": "lerna run --scope @app/* build --stream",
        "clean": "./node_modules/.bin/lerna run clean --stream --parallel",
        "start": "yarn --cwd ./web start"
    },
    "devDependencies": {
        "@types/rimraf": "^2.0.2",
        "lerna": "^4.0.0",
        "rimraf": "^2.6.3",
        "typescript": "^5.0.2"
    }
}

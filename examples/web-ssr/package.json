{
    "name": "@examples/web-ssr",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "yarn run clean && yarn run build-client && yarn run build-server",
        "build-client": "webpack --config ./build/webpack.config.client.js --mode=development --progress --hide-modules",
        "build-server": "concurrently \"tsc -b\" \"yarn run build-server-ssr\"",
        "build-server-ssr": "webpack --config ./build/webpack.config.server.js --mode=development --progress --hide-modules",
        "clean": "rimraf ./dist && rimraf tsconfig.tsbuildinfo",
        "start": "node dist/server.js"
    },
    "dependencies": {
        "@examples/01-hello-world": "1.0.0",
        "@examples/workbench": "1.0.0",
        "@shrub/express-core": "^0.1.21",
        "@shrub/module": "^0.1.21",
        "@shrub/service-collection": "^0.1.21",
        "@shrub/vue": "^0.1.21",
        "@shrub/vue-server": "^0.1.21",
        "cors": "^2.8.5",
        "express": "^4.16.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.6",
        "@types/express": "^4.16.1",
        "concurrently": "^4.1.2",
        "css-loader": "^2.1.1",
        "html-webpack-exclude-assets-plugin": "^0.0.7",
        "html-webpack-plugin": "^3.2.0",
        "node-sass": "^4.11.0",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "url-loader": "^1.1.2",
        "vue": "^2.6.10",
        "vue-loader": "^15.7.1",
        "vue-server-renderer": "^2.6.10",
        "vue-style-loader": "^4.1.2",
        "vue-template-compiler": "^2.6.10",
        "vuetify": "^1.5.18",
        "webpack": "^4.28.4",
        "webpack-cli": "^3.2.1",
        "webpack-merge": "^4.2.1",
        "webpack-node-externals": "^1.7.2"
    }
}
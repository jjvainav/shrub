{
    "name": "06-vue-3-mvc",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "bootstrap": "yarn install",
        "build": "yarn run clean && yarn run build-client && yarn run build-server",
        "build-client": "webpack --config ./build/webpack.config.client.js --mode=development --progress --hide-modules && yarn run copy-index",
        "build-server": "tsc",
        "clean": "rimraf ./dist && rimraf tsconfig.tsbuildinfo",
        "copy-index": "copyfiles -u 1 ./src/views/index/index.html dist",
        "start": "node dist/server.js"
    },
    "dependencies": {
        "@shrub/core": "^0.4.91",
        "@shrub/express": "^0.4.91",
        "express": "^4.16.4",
        "vue": "^3.0.2"
    },
    "devDependencies": {
        "@types/express": "^4.16.1",
        "@vue/compiler-sfc": "^3.0.2",
        "copyfiles": "^2.1.1",
        "css-loader": "^2.1.1",
        "html-webpack-plugin": "^3.2.0",
        "rimraf": "^2.6.3",
        "ts-loader": "^8.0.11",
        "vue-loader": "^16.0.0-rc.1",
        "webpack": "^4.28.4",
        "webpack-cli": "^3.2.1"
    }
}
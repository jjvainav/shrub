{
    "name": "@app/intro",
    "version": "1.0.0",
    "private": true,
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "scripts": {
        "build": "concurrently \"tsc -b\" \"yarn run copy-markdown\" \"yarn run copy-vue\"",
        "clean": "rimraf ./dist && rimraf tsconfig.tsbuildinfo",
        "copy-markdown": "copyfiles -u 1 ./src/*.md dist",
        "copy-vue": "copyfiles -u 1 ./src/component/**/*.vue dist"
    },
    "dependencies": {
        "@shrub/core": "^0.4.84",
        "@shrub/vue": "^0.4.84",
        "@shrub/vue-i18n": "^0.4.84",
        "marked": "^0.7.0",
        "vue": "^2.6.10",
        "vue-class-component": "^7.1.0"
    },
    "devDependencies": {
        "@types/marked": "^0.6.5",
        "copyfiles": "^2.1.1",
        "concurrently": "^4.1.2"
    }
}
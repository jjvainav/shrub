{
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noEmitOnError": true,
        "inlineSourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "esnext"
    }
}
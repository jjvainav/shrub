{
    "name": "@web/portal",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "yarn run clean && yarn run build-vendor && yarn run build-client && yarn run build-server",
        "build-app": "yarn run build-client && yarn run build-server",
        "build-client": "webpack --config ./build/webpack.config.client.js --mode=development --progress",
        "build-server": "tsc -b",
        "build-vendor": "webpack --config ./build/webpack.config.vendor.js --mode=development --progress",
        "clean": "rimraf ./dist && rimraf tsconfig.tsbuildinfo",
        "start": "node dist/server.js"
    },
    "dependencies": {
        "@app/intro": "1.0.0",
        "@app/workbench": "1.0.0",
        "connect-history-api-fallback": "^1.6.0",
        "cors": "^2.8.5",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@types/connect-history-api-fallback": "^1.3.3",
        "@types/cors": "^2.8.6",
        "@types/express": "4.17.9",
        "css-loader": "^5.2.6",
        "html-webpack-plugin": "^5.3.1",
        "html-webpack-tags-plugin": "^3.0.1",
        "node-sass": "^6.0.0",
        "raw-loader": "^4.0.2",
        "sass-loader": "^11.1.1",
        "style-loader": "^2.0.0",
        "url-loader": "^4.1.1",
        "vue": "^3.2.20",
        "vue-loader": "^16.8.2",
        "webpack": "^5.38.0",
        "webpack-cli": "^4.7.0",
        "webpack-merge": "^5.7.3",
        "webpack-node-externals": "^3.0.0"
    }
}